<!--HEAD-->
<%- include(".././partials/headEstrenos") %>

    <body class="bg1">
        <!--HEADER-->
        <%- include(".././partials/header") %>

            <!--MAIN-->
            <main>

                <!--EJS-->
                <h1 class="tituloDetalle">Ultimos estrenos</h1>

             <!--ejemplo con bd-->

             <div class="row row-cols-1 row-cols-md-2 ">

                <div class="col mb-4">
                    <!-- Contenido -->

                    <% for(const estreno of estrenos) {%>

                        <!--contenido-->
                        <div class="card-body">

                            <!--Titulo-->
                            <h4 class="card-title">
                                <%= estreno.nombre %>
                            </h4>

                            <!--Contenido imagen-->
                            <% for( const imagenFilm of imagenesFilm) { %>
                                <% if (imagenFilm.id_productoFilm === estreno.id) { %>
                                    <%for (const imagen of imagenes) { %>
                                        <% if (imagenFilm.id_imagenFilm === imagen.id) { %>
                                            <img style="width: 100%" src="<%= imagen.nombre %>">
                                        <% }%>        
                                    <% }%>  
                                <% }%> 
                            <% }%> 

                            <!--Texto-->
                            <p class="card-text">
                                <%=estreno.resumen%>
                            </p>

                            <h6 class="card-text">Fecha de estreno:
                                <%=estreno.fecha_estreno%>
                            </h6>

                            <h6 class="card-text"> Duraci√≥n:
                                <%=estreno.duracion%>
                            </h6>

                            <%}%>
                        </div>

            </main>
            <!-- FOOTER -->
            <%- include("../partials/footer") %>
    </body>

    </html>